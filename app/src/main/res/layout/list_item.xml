<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/c_idx_border"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageViewBooklogo_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/list_item_marginTopAndBottom"
            android:layout_marginTop="@dimen/list_item_marginTopAndBottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_book_open" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/c_idx_border"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/textView_suranameBangla"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:text="1.AL-Fatihah"
                android:gravity="bottom"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_suraNameEng"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:layout_marginLeft="25dp"
                android:text="fatiha"
                android:textStyle="bold"
                android:textColor="@color/c_idx_header_text2"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_totalVerse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/list_item_marginTopAndBottom"
            android:layout_marginTop="@dimen/list_item_marginTopAndBottom"
            android:layout_weight="1.5"
            android:textStyle="bold"
            android:text="Ayat Sonkha: 7"
            android:textColor="@color/c_idx_header_text2"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageViewPlaylogo_index"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/list_item_marginTopAndBottom"
            android:layout_marginTop="@dimen/list_item_marginTopAndBottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_play" />
    </LinearLayout>
</LinearLayout>